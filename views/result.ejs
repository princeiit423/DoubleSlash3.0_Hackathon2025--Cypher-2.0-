        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Roboto:wght@300;500&display=swap');

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        .container {
            max-width: 900px;
            margin: 50px auto;
            padding: 25px;
            background: #1e1e1e;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(0, 255, 127, 0.3);
            transition: all 0.3s ease-in-out;
        }

        h1 {
            text-align: center;
            font-size: 2.8rem;
            margin-bottom: 30px;
            color: #32cd32;
            text-transform: uppercase;
            letter-spacing: 3px;
        }

        .section {
            margin-bottom: 35px;
            padding: 20px;
            background: #252525;
            border-radius: 10px;
            box-shadow: 0 2px 10px rgba(50, 205, 50, 0.2);
            transition: transform 0.3s ease-in-out;
        }

        .section:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(50, 205, 50, 0.4);
        }

        .section h2 {
            font-size: 1.8rem;
            border-bottom: 2px solid #32cd32;
            padding-bottom: 8px;
            margin-bottom: 15px;
            color: #a8ff78;
        }

        .image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            border: 2px solid #32cd32;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .image:hover {
            transform: scale(1.08);
            box-shadow: 0 0 12px rgba(0, 255, 127, 0.5);
        }

        .suggestion {
            padding: 18px;
            background: #292929;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 255, 127, 0.2);
            transition: background-color 0.3s ease-in-out, transform 0.2s;
        }

        .suggestion:hover {
            background-color: #323232;
            transform: translateY(-3px);
        }

        .suggestion h3 {
            margin-top: 0;
            font-size: 1.5rem;
            color: #32cd32;
        }

        ul {
            list-style-type: disc;
            padding-left: 20px;
        }

        ul li {
            margin-bottom: 8px;
        }

        p {
            margin: 12px 0;
            line-height: 1.7;
            font-family: 'Roboto', sans-serif;
            color: #d0d0d0;
        }

        .btn {
            display: block;
            width: 200px;
            margin: 30px auto;
            padding: 14px;
            font-size: 1rem;
            font-weight: bold;
            color: #121212;
            background: linear-gradient(45deg, #32cd32, #a8ff78);
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 255, 127, 0.4);
            transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            text-align: center;
            outline: none;
            text-decoration: none;
        }

        .btn:hover {
            background: linear-gradient(45deg, #2abf2a, #98ff6f);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 255, 127, 0.5);
        }

        .btn:active {
            transform: translateY(2px);
            box-shadow: 0 2px 5px rgba(0, 255, 127, 0.3);
        }

        .btn-link {
            text-decoration: none;
        }

    </style>
</head>
